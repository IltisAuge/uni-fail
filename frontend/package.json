{
	"name": "frontend",
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"ng": "ng",
		"start": "ng serve",
		"dev:ssr": "ng run frontend:serve-ssr:development",
		"build": "ng build --configuration=development",
		"build:prod": "ng build --configuration=production --base-href=/ && ng run frontend:server:production",
		"preview:ssr": "node dist/frontend/server/server.mjs",
		"test": "ng test",
		"eslint:html": "eslint src/**/*.html",
		"eslint:ts": "eslint src/**/*.ts",
		"eslint:html:fix": "eslint src/**/*.html --fix",
		"eslint:ts:fix": "eslint src/**/*.ts --fix",
		"stylelint": "stylelint \"src/**/*.css\"",
        "stylelint:fix": "stylelint \"src/**/*.css\" --fix",
		"htmlformat": "prettier --write \"src/**/*.{html}\""
	},
	"private": true,
	"dependencies": {
		"@angular/animations": "^18.0.0",
		"@angular/common": "^18.0.0",
		"@angular/compiler": "^18.0.0",
		"@angular/core": "^18.0.0",
		"@angular/forms": "^18.0.0",
		"@angular/platform-browser": "^18.0.0",
		"@angular/platform-browser-dynamic": "^18.0.0",
		"@angular/platform-server": "^18.0.0",
		"@angular/router": "^18.0.0",
		"@angular/ssr": "^18.2.19",
		"@fortawesome/angular-fontawesome": "^0.15.0",
		"@fortawesome/free-solid-svg-icons": "^6.7.2",
		"@tailwindcss/postcss": "^4.1.7",
		"express": "^4.18.2",
		"globals": "^16.2.0",
		"npm": "^8.19.4",
		"postcss": "^8.5.3",
		"rxjs": "~7.8.0",
		"tailwindcss": "^4.1.7",
		"tslib": "^2.3.0",
		"zone.js": "~0.14.3"
	},
	"devDependencies": {
		"@angular-devkit/build-angular": "^18.0.0",
		"@angular-eslint/eslint-plugin-template": "^20.1.1",
		"@angular-eslint/template-parser": "^20.1.1",
		"@angular/cli": "^18.0.0",
		"@angular/compiler-cli": "^18.0.0",
		"@eslint/js": "^9.30.0",
		"@stylistic/stylelint-plugin": "^3.1.3",
		"@types/express": "^4.17.17",
		"@types/jasmine": "~5.1.0",
		"@types/node": "^18.18.0",
		"@typescript-eslint/eslint-plugin": "^8.35.0",
		"@typescript-eslint/parser": "^8.35.0",
		"browser-sync": "^3.0.4",
		"eslint": "^9.30.0",
		"eslint-plugin-import": "^2.32.0",
		"eslint-plugin-promise": "^7.2.1",
		"jasmine-core": "~5.1.0",
		"karma": "~6.4.0",
		"karma-chrome-launcher": "~3.2.0",
		"karma-coverage": "~2.2.0",
		"karma-jasmine": "~5.1.0",
		"karma-jasmine-html-reporter": "~2.1.0",
		"prettier": "^3.6.2",
		"stylelint": "^16.21.0",
		"stylelint-config-standard": "^38.0.0",
		"typescript": "~5.4.2",
		"typescript-eslint": "^8.35.0"
	}
