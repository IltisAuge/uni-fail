{
    "compilerOptions": {
        "module": "ES2022",
        "target": "ES2022",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "outDir": "dist",
        "rootDir": "src",
        "resolveJsonModule": true,
        "allowImportingTsExtensions": true,
        "noEmit": false,
        "verbatimModuleSyntax": true
    },
    "include": [
        "src/**/*",
        "types/**/*",
        "**/*.json"
    ]
}
