{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "strict": true,
        "baseUrl": "./src",
        "paths": {
            "@/*": ["*"]
        },
        "allowJs": false,
        "skipLibCheck": true
    },
    "include": [
        "src",
        "vite.config.ts"
    ]
}
