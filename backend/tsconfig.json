{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ES2022",
        "moduleResolution": "node",
        "outDir": "dist",
        "rootDir": "src",
        "esModuleInterop": true,
        "moduleDetection": "force",
        "resolveJsonModule": true,
        "strict": true
    },
	"include": [
		"src",
		"types",
		".env",
		"google_client.json",
		"package.json",
		"package-lock.json"
	]
}
